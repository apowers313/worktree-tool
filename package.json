{
  "name": "worktree-tool",
  "version": "0.1.0",
  "description": "Git worktree management tool",
  "main": "dist/index.js",
  "bin": {
    "wtt": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "ts-node src/index.ts",
    "test": "npm run test:fast",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:slow": "jest --config jest.config.slow.js",
    "test:fast": "jest",
    "test:tmux": "jest --config jest.config.tmux.js",
    "test:all": "npm run test:fast && npm run test:slow"
  },
  "keywords": [
    "git",
    "worktree",
    "development",
    "productivity"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "chalk": "^5.3.0",
    "commander": "^12.0.0",
    "simple-git": "^3.28.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "jest": "^29.0.0",
    "ts-jest": "^29.0.0",
    "ts-node": "^10.0.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}